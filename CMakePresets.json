{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 1
  },
  "configurePresets": [
    {
      "name": "debug",
      "hidden": false,
      "description": "Debug build with full warnings, sanitizers, and compile commands",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/Debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "YES",
        "CMAKE_CXX_STANDARD": "23",
        "CMAKE_CXX_STANDARD_REQUIRED": "ON",
        "CMAKE_CXX_EXTENSIONS": "OFF",
        "META_BUILD_SHARED": "ON",
        "ENABLE_SANITIZERS": "ON",
        "WARNINGS_AS_ERRORS": "ON"
      }
    },
    {
      "name": "release",
      "hidden": false,
      "description": "Optimized release build with LTO enabled",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/Release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "YES",
        "CMAKE_CXX_STANDARD": "23",
        "CMAKE_CXX_STANDARD_REQUIRED": "ON",
        "CMAKE_CXX_EXTENSIONS": "OFF",
        "META_BUILD_SHARED": "ON",
        "ENABLE_LTO": "ON",
        "WARNINGS_AS_ERRORS": "OFF"
      }
    },
    {
      "name": "relwithdebinfo",
      "hidden": false,
      "description": "Release build with debug info for profiling",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/RelWithDebInfo",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "YES",
        "CMAKE_CXX_STANDARD": "23",
        "CMAKE_CXX_STANDARD_REQUIRED": "ON",
        "CMAKE_CXX_EXTENSIONS": "OFF",
        "META_BUILD_SHARED": "ON",
        "ENABLE_LTO": "ON",
        "WARNINGS_AS_ERRORS": "OFF"
      }
    }
  ],
  "buildPresets": [
    { "name": "debug", "configurePreset": "debug" },
    { "name": "release", "configurePreset": "release" },
    { "name": "relwithdebinfo", "configurePreset": "relwithdebinfo" }
  ],
  "testPresets": [
    { "name": "debug-tests", "configurePreset": "debug" },
    { "name": "release-tests", "configurePreset": "release" }
  ]
}
